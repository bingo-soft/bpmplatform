{  
    "name": "bingo-soft/jabe",
    "license": "MIT",
    "authors": [{
        "name": "Bingo-Soft",
        "email": "bingosoft@bk.ru"
    }],
    "description": "Just another BPMN engine for workflow and process automation",
    "keywords": ["php", "bpmn", "workflow", "process", "automation"],
    "homepage": "https://github.com/bingo-soft/jabe",
    "type": "project",
    "config": {
        "vendor-dir": "./vendor",
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }  
    },
    "require": {
        "php": "^8.0",
        "bingo-soft/xml": "^1.0",
        "monolog/monolog": "^2.3",
        "phpmailer/phpmailer": "^6.5",
        "phpixie/image": "^3.3",
        "ramsey/uuid": "^4.2",
        "dragonmantank/cron-expression": "^3.3",
        "symfony/event-dispatcher": "^6.0",
        "guzzlehttp/guzzle": "^7.0",
        "bingo-soft/bpmn": "*",
        "bingo-soft/sax": "*",
        "bingo-soft/util": "*",
        "bingo-soft/el": "*",
        "bingo-soft/script": "*",
        "bingo-soft/mybatis": "*",
        "bingo-soft/concurrent": "*",
        "symfony/process": "^6.2"
    },
    "require-dev": {
        "doctrine/coding-standard": "^9",
        "squizlabs/php_codesniffer": "3.6.0",
        "phpunit/phpunit": "^9.3.0"
    },
    "autoload": {
        "psr-4": {
            "Jabe\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": { 
            "Tests\\": "./tests"
        }
    }
}
